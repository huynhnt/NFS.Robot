                                        <TextBlock
                                            Margin="5,20"
                                            FontFamily="Arial Black"
                                            FontSize="16"
                                            Foreground="#FFA4A0A0"
                                            Text="℃" />
                                    </StackPanel>

                                </StackPanel>
                            </Border>
                        </DockPanel>
