                            <Border
                                Margin="10"
                                Background="#FF3B3B3B"
                                BorderBrush="#FF323232"
                                BorderThickness="2"
                                CornerRadius="10">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock
                                        Margin="70,10"
                                        VerticalAlignment="Top"
                                        FontFamily="Arial"
                                        FontSize="16"
                                        Foreground="#FFA4A0A0"
                                        Text="MAX" />
                                    <StackPanel Margin="70,0,0,0" Orientation="Horizontal">
                                        <TextBlock
                                            VerticalAlignment="Top"
                                            FontFamily="Arial"
                                            FontSize="40"
                                            Foreground="White"
                                            Text="75" />
                                        <TextBlock
                                            Margin="5,20"
                                            FontFamily="Arial Black"
                                            FontSize="16"
                                            Foreground="#FFA4A0A0"
                                            Text="℃" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DockPanel>
                    </Grid>
                </WrapPanel>
                <Popup
